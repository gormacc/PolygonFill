<Window x:Class="PolygonFilling.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolygonFilling"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Canvas Grid.Column="0" Name="canvas" Background="White"/>
        <StackPanel Grid.Column="1" Background="Coral">
            <Button Name="ClearCanvasButton" Click="ClearCanvas" Content="Wyczysc" Margin="10,20" />
            <ToggleButton Name="DrawPolygonToggleButton" Checked="StartDrawingPolygon" Unchecked="EndDrawingPolygon" Content="Narysuj wielokat" Margin="10,20" />
            <Button Name="ColorPolygon" Click="ColorPolygonClick" Content="Koloruj" Margin="10,20" />
            <xctk:ColorPicker Name="PolygonFillColorPicker" SelectedColor="Red" SelectedColorChanged="PickedColorChanged" Margin="10,20"/>
            <StackPanel Margin="10,20">
                <TextBlock Text="Wybór zaznaczonego wielokąta"/>
                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <Button Content="Prev" Click="SelectPrevPolygon" HorizontalAlignment="Left"/>
                    <Button Content="Next" Click="SelectNextPolygon" HorizontalAlignment="Right"/>
                </StackPanel>
            </StackPanel>
            <ToggleButton Name="ClipPolygonsToggleButton" Checked="StartClippingPolygons" Unchecked="EndClippingPolygons" Content="Wycinanie" Margin="10,20"></ToggleButton>
            <StackPanel Name="ClippingPolygonsStackPanel" Visibility="Collapsed">
                <StackPanel Margin="10,20">
                    <TextBlock Text="Wybór pierwszego wycinanego wielokąta"/>
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <Button Content="Prev" Click="SelectPreviousClippingPolygonOne" HorizontalAlignment="Left"/>
                        <Button Content="Next" Click="SelectNextClippingPolygonOne" HorizontalAlignment="Right"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="10,20">
                    <TextBlock Text="Wybór drugiego wycinanego wielokąta"/>
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <Button Content="Prev" Click="SelectPreviousClippingPolygonTwo" HorizontalAlignment="Left"/>
                        <Button Content="Next" Click="SelectNextClippingPolygonTwo" HorizontalAlignment="Right"/>
                    </StackPanel>
                </StackPanel>
                <Button Name="ClipPolygonsButton" Click="ClipPolygons" Content="Wytnij" Margin="10,20" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
